{%  extends 'base.html.twig' %}

{% block title %}Starshop{% endblock %}
{%  block body %}
<h1>Starshop</h1>

<div>
    There are {{ ships|length }} starships

    {% if ships|length > 2 %}
        <p>
            {# Comments syntax #}
            more than 2 starships
        </p>
    {% endif %}
</div>

<div>
    <h2>My Ship</h2>
    <table>
        <tr>
            <th>Name</th>
            <td>
                <a href="{{ path('app_starship_show', { id: myShip.id }) }}">
                    {{ myShip.name | upper }}
                </a>
            </td>
        </tr>
        <tr>
            <th>Class</th>
            <td>{{ myShip.class }}</td>
        </tr>
        <tr>
            <th>Captain</th>
            <td>{{ myShip.captain }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ myShip.status }}</td>
        </tr>
    </table>
</div>

{% endblock %}